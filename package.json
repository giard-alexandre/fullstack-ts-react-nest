{
  "name": "fullstack-ts-react-nest",
  "version": "1.0.0",
  "description": "FullStack React with TypeScript and NestJS starter kit.",
  "main": "index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "scripts": {
    "clean": "rimraf dist",
    "copy:views": "copyfiles views/*.ejs dist\n",
    "start": "npm run clean && npm run copy:views && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
    "start:hot": "npm run clean && npm run copy:views && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client:hot\"",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "dev-client": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack-config.json\" webpack-dev-server -w",
    "dev-client:hot": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack-config.json\" webpack-dev-server -w --hot",
    "dev-server": "tsc-watch -p ./server --onSuccess \"node --inspect index.js\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "prod": "node index.js",
    "type-check": "tsc -p ./tsconfig.json",
    "build-client": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"tsconfig.webpack-config.json\" webpack -p",
    "build-server": "tsc -p ./server",
    "build": "npm run clean && npm run copy:views && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "keywords": [
    "typescript",
    "react",
    "starter-kit",
    "webpack",
    "fullstack",
    "express",
    "express4",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gilamran/fullstack-typescript.git"
  },
  "license": "MIT",
  "author": "Gil Amran",
  "jest": {
    "roots": [
      "<rootDir>/server",
      "<rootDir>/client"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/client/setupEnzyme.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/server/tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@nestjs/common": "^6.6.3",
    "@nestjs/core": "^6.6.3",
    "@nestjs/platform-express": "^6.6.3",
    "@nestjs/typeorm": "^6.1.3",
    "@types/react-router": "^5.0.3",
    "@types/react-router-config": "^5.0.0",
    "antd": "~3.22.2",
    "axios": "^0.19.0",
    "babel-plugin-react-css-modules": "^5.2.6",
    "body-parser": "^1.19.0",
    "clsx": "^1.0.4",
    "css-modules": "^0.3.0",
    "date-fns": "^2.0.1",
    "dotenv": "^8.1.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "find-up": "^4.1.0",
    "less": "~2.7.3",
    "less-vars-to-js": "^1.3.0",
    "nest-router": "^1.0.9",
    "pg": "^7.12.1",
    "react-router-config": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "tslib": "^1.10.0",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.9.0",
    "@nestjs/testing": "^6.6.3",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/cssnano": "^4.0.0",
    "@types/enzyme": "^3.10.3",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.14.2",
    "@types/react": "^16.9.2",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "^4.39.1",
    "@types/webpack-bundle-analyzer": "^2.13.2",
    "@types/webpack-dev-server": "^3.1.7",
    "@types/webpack-manifest-plugin": "^2.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.1",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^5.0.3",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "^3.0.1",
    "http-proxy-middleware": "^0.19.1",
    "jest": "^24.9.0",
    "less-loader": "^5.0.0",
    "open-browser-webpack-plugin": "^0.0.5",
    "postcss-loader": "^3.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.12.12",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsc-watch": "^2.4.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "typescript": "~3.5.3",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.3",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-manifest-plugin": "^2.0.4"
  }
}
